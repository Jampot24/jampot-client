{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@web/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
