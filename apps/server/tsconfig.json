{
  "compilerOptions": {
    "outDir": "dist",  
    "paths": {
      "@server/*": ["./src/*"]
    },
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "es2015",
    "lib": ["es2015", "dom"],

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
