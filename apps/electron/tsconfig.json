{
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "@electron/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*", "src/emotion.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".vite"]
}
